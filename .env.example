# YourDaddy AI Assistant - Environment Configuration
# Copy this file to .env and fill in your actual API keys and credentials
# DO NOT commit .env file to version control!

# ================================
# REQUIRED API KEYS
# ================================

# Google Gemini API Key (REQUIRED for multimodal AI features)
# Get it from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Picovoice Access Key (REQUIRED for wake word detection)
# Get it from: https://console.picovoice.ai/
PICOVOICE_ACCESS_KEY=your_picovoice_access_key_here

# ================================
# SPOTIFY INTEGRATION
# ================================

# Spotify API Credentials (REQUIRED for music controls)
# Get them from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback

# ================================
# GOOGLE SERVICES (Calendar & Gmail)
# ================================

# Google Calendar & Gmail (REQUIRED for calendar/email features)
# Download credentials.json from: https://console.cloud.google.com/
# Place credentials.json in the project root directory
# The application will guide you through OAuth flow on first run
# GOOGLE_CREDENTIALS_PATH=./credentials.json

# ================================
# SECURITY & AUTHENTICATION
# ================================

# JWT Secret Key (REQUIRED for web backend authentication)
# Generate a strong random key: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here_use_random_strong_key

# Admin Credentials (REQUIRED for web interface login)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_to_a_strong_password

# ================================
# SERVER CONFIGURATION
# ================================

# Flask Server Settings
FLASK_ENV=development
FLASK_DEBUG=True
HOST=127.0.0.1
PORT=5000

# Enable CORS for specific origins (comma-separated)
# In production, set to your frontend URL only
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:5173

# ================================
# OPTIONAL API KEYS
# ================================

# OpenAI API Key (Optional - for alternative AI models)
# OPENAI_API_KEY=your_openai_api_key_here

# Azure Speech Services (Optional - for enhanced voice features)
# AZURE_SPEECH_KEY=your_azure_speech_key_here
# AZURE_SPEECH_REGION=your_azure_region_here

# Weather API (Optional - for weather features)
# OPENWEATHER_API_KEY=your_weather_api_key_here

# News API (Optional - for news features)
# NEWS_API_KEY=your_news_api_key_here

# ================================
# DATABASE CONFIGURATION
# ================================

# Database Path (SQLite)
DATABASE_PATH=./data/yourdaddy.db
DATABASE_URL=sqlite:///memory.db
MEMORY_DATABASE_PATH=./data/memory.db
LANGUAGE_DATABASE_PATH=./data/language.db

# ================================
# LOGGING & MONITORING
# ================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=./logs/yourdaddy.log

# ================================
# PERFORMANCE SETTINGS
# ================================

# Cache Settings
ENABLE_CACHE=True
CACHE_SIZE=1000
CACHE_TTL=3600

# Voice Recognition
VOICE_RECOGNITION_TIMEOUT=5
VOICE_RECOGNITION_PHRASE_TIME_LIMIT=10

# ================================
# FEATURE FLAGS
# ================================

# Enable/Disable Features
ENABLE_VOICE_RECOGNITION=True
ENABLE_WAKE_WORD=True
ENABLE_MULTILINGUAL=True
ENABLE_MULTIMODAL=True
ENABLE_MUSIC_CONTROLS=True
ENABLE_CALENDAR=True
ENABLE_EMAIL=True
ENABLE_WEB_SCRAPING=True
ENABLE_OCR=True
ENABLE_FILE_OPERATIONS=True

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Session Timeout (minutes)
SESSION_TIMEOUT=30
